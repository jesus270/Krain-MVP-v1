{
  "name": "krain",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rmdir /s /q node_modules || exit 0 && rmdir /s /q .turbo || exit 0",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@swc/core": "^1.11.8",
    "@turbo/gen": "^2.4.4",
    "prettier": "^3.5.3",
    "turbo": "^2.4.4"
  },
  "engines": {
    "node": ">=20.0.0 <21.0.0"
  },
  "packageManager": "pnpm@10.4.1+sha512.c753b6c3ad7afa13af388fa6d808035a008e30ea9993f58c6663e2bc5ff21679aa834db094987129aa4d488b86df57f7b634981b2f827cdcacc698cc0cfb88af",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "pnpm": {
    "overrides": {
      "@privy-io/server-auth": "1.19.0"
    },
    "onlyBuiltDependencies": [
      "@swc/core",
      "@vercel/speed-insights",
      "bigint-buffer",
      "bufferutil",
      "core-js-pure",
      "esbuild",
      "postgresql",
      "sharp",
      "utf-8-validate"
    ]
  }
}
